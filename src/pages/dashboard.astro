---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Dashboard">
  <div class="min-h-screen bg-gray-100 dark:bg-gray-900 p-4">
    <!-- Loading state -->
    <div id="loading" class="max-w-6xl mx-auto">
      <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6 text-center">
        <p class="text-gray-600 dark:text-gray-400">Loading dashboard...</p>
      </div>
    </div>

    <!-- Dashboard content (hidden initially) -->
    <div id="dashboard-content" class="max-w-6xl mx-auto hidden">
      <!-- Header with Logo -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <img 
              src="/jp_black.webp" 
              alt="JP Logo" 
              class="h-8 w-auto mr-3 dark:hidden border-0 outline-none"
              style="border: none; outline: none;"
            />
            <img 
              src="/jp_white.webp" 
              alt="JP Logo" 
              class="h-8 w-auto mr-3 hidden dark:block border-0 outline-none"
              style="border: none; outline: none;"
            />
            <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-200">Welcome back!</h1>
            <p id="user-email" class="text-gray-600 dark:text-gray-400 mt-2">Loading...</p>
          </div>
          <button 
            id="logout-btn"
            class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline transition duration-150 ease-in-out"
          >
            Logout
          </button>
        </div>
      </div>

      <!-- Dashboard Content -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Quick Stats -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Quick Stats</h2>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Profile</span>
              <span class="text-green-600 font-semibold">Active</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Last Login</span>
              <span class="text-gray-800 dark:text-gray-200">Just now</span>
            </div>
          </div>
        </div>

        <!-- Personal Website -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Your Website</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Ready to build your personal site features?</p>
          <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
            Start Building
          </button>
        </div>

        <!-- Projects -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Projects</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Showcase your work and projects</p>
          <button class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
            Add Project
          </button>
        </div>

        <!-- Blog -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Blog</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Share your thoughts and expertise</p>
          <button class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
            Write Post
          </button>
        </div>

        <!-- Analytics -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Analytics</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Track your site performance</p>
          <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
            View Analytics
          </button>
        </div>

        <!-- Settings -->
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Settings</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Customize your experience</p>
          <button class="w-full bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-lg transition duration-150 ease-in-out">
            Manage Settings
          </button>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6 mt-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Recent Activity</h2>
        <div class="space-y-3">
          <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <span class="text-gray-800 dark:text-gray-200">Successfully logged in with Google</span>
            </div>
            <span class="text-gray-500 dark:text-gray-400 text-sm">Just now</span>
          </div>
          <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
              <span class="text-gray-800 dark:text-gray-200">Authentication system setup completed</span>
            </div>
            <span class="text-gray-500 dark:text-gray-400 text-sm">Today</span>
          </div>
          <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-purple-500 rounded-full mr-3"></div>
              <span class="text-gray-800 dark:text-gray-200">Ready to build personal website features</span>
            </div>
            <span class="text-gray-500 dark:text-gray-400 text-sm">Today</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  import { supabase } from '../lib/supabaseClient';
  
  document.addEventListener('DOMContentLoaded', async () => {
    const loading = document.getElementById('loading');
    const dashboardContent = document.getElementById('dashboard-content');
    const userEmail = document.getElementById('user-email');
    const logoutBtn = document.getElementById('logout-btn');
    
    // Check if all required DOM elements exist
    if (!loading || !dashboardContent || !userEmail || !logoutBtn) {
      console.error('Required DOM elements not found');
      return;
    }
    
    try {
      // Get current session
      const { data: { session }, error } = await supabase.auth.getSession();
      
      if (error) {
        console.error('Error getting session:', error.message);
        window.location.href = '/?error=session_error';
        return;
      }
      
      if (!session) {
        console.log('No session found, redirecting to login');
        window.location.href = '/?unauthorized=true';
        return;
      }
      
      // Session exists, show dashboard
      userEmail.textContent = `Logged in as: ${session.user.email}`;
      loading.style.display = 'none';
      dashboardContent.classList.remove('hidden');
      
      // Handle logout
      logoutBtn.addEventListener('click', async () => {
        try {
          const { error } = await supabase.auth.signOut();
          if (error) {
            console.error('Error logging out:', error.message);
          }
          window.location.href = '/';
        } catch (error) {
          console.error('Error during logout:', error.message);
          window.location.href = '/';
        }
      });
      
    } catch (error) {
      console.error('Error in dashboard:', error.message);
      window.location.href = '/?error=dashboard_error';
    }
  });
</script>
