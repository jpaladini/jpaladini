// Projects page
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects - Jason Paladini</title>
    <meta name="description" content="Projects by Jason Paladini" />
    <link rel="icon" type="image/png" href="/jp_black.png" />
  </head>

  <body class="bg-white dark:bg-slate-900 text-gray-900 dark:text-gray-100 min-h-screen">
    <!-- Top banner -->
    <nav class="w-full py-3 border-b border-gray-100 dark:border-gray-800">
      <div class="max-w-4xl mx-auto px-6 flex items-center justify-between">
      <a href="/" class="h-8 w-fit overflow-hidden dark:hidden">
        <img
          src="/jp_black.webp"
          alt="JP"
          class="h-9 w-auto -mt-0.5 -ml-0.5 border-0 outline-none"
        />
      </a>
      <a href="/" class="h-8 w-fit overflow-hidden hidden dark:block">
        <img
          src="/jp_white.webp"
          alt="JP"
          class="h-9 w-auto -mt-0.5 -ml-0.5 border-0 outline-none"
        />
      </a>
      <a href="/" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
        Main
      </a>
      </div>
    </nav>

    <main class="max-w-2xl mx-auto px-6 py-12 sm:py-16">

      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-3xl sm:text-4xl font-bold mb-2">Projects</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">Things I've built</p>
      </header>

      <!-- Empty state -->
      <div class="flex flex-col items-center justify-center py-16 text-center">
        <svg class="w-10 h-10 text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
        </svg>
        <p class="text-gray-500 dark:text-gray-400">Nothing here yet</p>
        <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">Check back soon</p>
      </div>

    </main>

    <!-- Dark mode detection -->
    <script>
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </body>
</html>
