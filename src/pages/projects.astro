---
import MainLayout from '../layouts/MainLayout.astro';

// Project showcase - add your projects here
const projects = [
  {
    id: 'pbi-snowflake-compare',
    title: 'Power BI vs Snowflake Comparison',
    description: 'Interactive comparison dashboard built with Streamlit',
    url: 'https://jphzn-pbi-snwflk-compare-20260125.streamlit.app/',
    status: 'active',
  },
  {
    id: 'claims-timeliness',
    title: 'Claims Timeliness Dashboard',
    description: 'Claims processing analytics built with Streamlit',
    url: 'https://jp-claims-timeliness.streamlit.app/',
    status: 'active',
  },
  // Add more projects here
  // {
  //   id: 'project-id',
  //   title: 'Project Title',
  //   description: 'Project description',
  //   url: 'https://your-project-url.com',
  //   status: 'active', // or 'coming-soon'
  // },
];
---

<MainLayout
  title="Projects - Jason Paladini"
  description="Projects by Jason Paladini"
>
  <div class="max-w-7xl mx-auto px-6 py-12 sm:py-16">
    <header class="mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold mb-2">Projects</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">Explore my work</p>
    </header>

    <!-- Projects Grid - Up to 4x4 with scrolling -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {projects.map((project) => (
        <a
          href={project.status === 'active' ? project.url : '#'}
          target={project.status === 'active' ? '_blank' : undefined}
          rel={project.status === 'active' ? 'noopener noreferrer' : undefined}
          class={`group block p-6 bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 transition-all ${
            project.status === 'active'
              ? 'hover:shadow-xl hover:-translate-y-1 cursor-pointer'
              : 'opacity-60 cursor-not-allowed'
          }`}
          aria-disabled={project.status !== 'active'}
        >
          <div class="flex flex-col h-full">
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-xl font-bold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {project.title}
              </h2>
              {project.status === 'coming-soon' && (
                <span class="px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded whitespace-nowrap ml-2">
                  Coming Soon
                </span>
              )}
            </div>
            <p class="text-gray-600 dark:text-gray-400 text-sm flex-grow">
              {project.description}
            </p>
            {project.status === 'active' && (
              <div class="mt-4 flex items-center text-blue-600 dark:text-blue-400 text-sm font-medium">
                <span>View Project</span>
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            )}
          </div>
        </a>
      ))}
    </div>

    <!-- Empty state if no projects -->
    {projects.length === 0 && (
      <div class="text-center py-16">
        <svg class="w-10 h-10 text-gray-300 dark:text-gray-600 mb-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
        </svg>
        <p class="text-gray-500 dark:text-gray-400">No projects yet</p>
        <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">Check back soon</p>
      </div>
    )}
  </div>
</MainLayout>
