---
import MainLayout from '../layouts/MainLayout.astro';

// Project showcase with detailed information
const projects = [
  {
    id: 'pbi-snowflake-compare',
    title: 'Power BI vs Snowflake Comparison',
    description: 'Performance and feature comparison between Power BI semantic models and Snowflake. Demonstrates data modeling strategies, query optimization techniques, and cost analysis across platforms.',
    keyFeatures: [
      'Side-by-side performance benchmarking',
      'Query optimization insights',
      'Cost analysis and TCO comparison',
    ],
    technologies: ['Streamlit', 'Python', 'Power BI', 'Snowflake', 'Data Modeling'],
    url: 'https://jphzn-pbi-snwflk-compare-20260125.streamlit.app/',
    screenshot: '/projects/pbi-snowflake.png', // placeholder
    status: 'active',
  },
  {
    id: 'pbi-model-explorer',
    title: 'Power BI Model Explorer',
    description: 'Interactive exploration of Power BI semantic models and dbt relationships. Visualizes data lineage, model dependencies, and metadata for data engineering workflows. Built to help teams understand complex data models.',
    keyFeatures: [
      'dbt model lineage visualization',
      'Power BI relationship mapping',
      'Metadata exploration and analysis',
    ],
    technologies: ['Streamlit', 'Python', 'dbt', 'Power BI', 'DAX', 'Metadata Analysis'],
    url: 'https://jp-pbi-model-explorer.streamlit.app/',
    screenshot: '/projects/model-explorer.png', // placeholder
    status: 'active',
  },
  {
    id: 'data-profiling',
    title: 'Data Profiling Tool',
    description: 'Automated data quality assessment and profiling. Analyzes datasets for statistical patterns, null values, data type validation, and quality issues. Helps data engineers quickly understand new data sources.',
    keyFeatures: [
      'Statistical analysis and distributions',
      'Data quality metrics and alerts',
      'Null detection and type validation',
    ],
    technologies: ['Streamlit', 'Python', 'pandas', 'Data Quality', 'Analytics'],
    url: 'https://jphzn-profiling.streamlit.app/',
    screenshot: '/projects/profiling.png', // placeholder
    status: 'active',
  },
  {
    id: 'claims-timeliness',
    title: 'Claims Timeliness Dashboard',
    description: 'Healthcare claims processing KPIs and trend analysis. Tracks processing times, bottlenecks, and operational metrics. Demonstrates domain expertise in healthcare analytics and business intelligence.',
    keyFeatures: [
      'Time-series claims analysis',
      'Processing bottleneck identification',
      'Operational KPIs and metrics',
    ],
    technologies: ['Streamlit', 'Python', 'Healthcare Analytics', 'Business Intelligence'],
    url: 'https://jp-claims-timeliness.streamlit.app/',
    screenshot: '/projects/claims.png', // placeholder
    status: 'active',
  },
  {
    id: 'sra-timeline',
    title: 'SRA Timeline',
    description: 'Strategic roadmap and milestone tracking visualization. Interactive timeline for project planning, dependency management, and progress tracking. Shows advanced Streamlit component development.',
    keyFeatures: [
      'Interactive timeline visualization',
      'Milestone and dependency tracking',
      'Strategic planning interface',
    ],
    technologies: ['Streamlit', 'Python', 'Project Management', 'Visualization'],
    url: 'https://jphzn-sra-timeline.streamlit.app/',
    screenshot: '/projects/timeline.png', // placeholder
    status: 'active',
  },
  {
    id: 'chess',
    title: 'Chess Game',
    description: 'Interactive chess application with move validation and game state management. Demonstrates algorithmic thinking, state management patterns, and interactive UI development in Streamlit.',
    keyFeatures: [
      'Complete chess logic and validation',
      'Interactive game state management',
      'Clean UI/UX design',
    ],
    technologies: ['Streamlit', 'Python', 'Algorithms', 'Game Development'],
    url: 'https://jp-chess.streamlit.app/',
    screenshot: '/projects/chess.png', // placeholder
    status: 'active',
  },
];

// Extract all unique technologies for the chart
const allTechnologies = [...new Set(projects.flatMap(p => p.technologies))];
const techCounts = allTechnologies.map(tech => ({
  name: tech,
  count: projects.filter(p => p.technologies.includes(tech)).length
})).sort((a, b) => b.count - a.count);
---

<MainLayout
  title="Projects - Jason Paladini"
  description="Projects by Jason Paladini"
>
  <div class="max-w-7xl mx-auto px-6 py-12 sm:py-16">
    <header class="mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold mb-2">Projects</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">Data engineering tools and analytics applications built with Streamlit</p>
    </header>

    <!-- Projects Grid - 2 columns on desktop, wider cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16">
      {projects.map((project) => (
        <a
          href={project.status === 'active' ? project.url : '#'}
          target={project.status === 'active' ? '_blank' : undefined}
          rel={project.status === 'active' ? 'noopener noreferrer' : undefined}
          class={`group block bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 transition-all overflow-hidden ${
            project.status === 'active'
              ? 'hover:shadow-xl hover:-translate-y-1 cursor-pointer'
              : 'opacity-60 cursor-not-allowed'
          }`}
          aria-disabled={project.status !== 'active'}
        >
          <!-- Horizontal Layout: Screenshot Left, Content Right -->
          <div class="flex flex-col sm:flex-row">
            <!-- Screenshot Placeholder -->
            <div class="w-full sm:w-48 h-48 sm:h-auto bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900 dark:to-slate-800 flex items-center justify-center flex-shrink-0">
              <svg class="w-16 h-16 text-blue-400 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
              </svg>
            </div>

            <!-- Content Area -->
            <div class="flex-1 p-6 flex flex-col">
              <!-- Title and Tags -->
              <div class="mb-3">
                <h2 class="text-xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {project.title}
                </h2>
                <div class="flex flex-wrap gap-1.5">
                  {project.technologies.map(tech => (
                    <span class="px-2 py-0.5 text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Description -->
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 flex-grow">
                {project.description}
              </p>

              <!-- View Project Link -->
              {project.status === 'active' && (
                <div class="flex items-center text-blue-600 dark:text-blue-400 text-sm font-medium">
                  <span>View Project</span>
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </div>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Technology Stack Visualization Section -->
    <section class="mt-16 pt-12 border-t border-gray-200 dark:border-gray-700">
      <h2 class="text-2xl font-bold mb-6">Technology Stack</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        Skills and technologies used across all projects
      </p>

      <!-- D3 Bar Chart Container -->
      <div id="tech-stack-viz" class="bg-white dark:bg-slate-800 rounded-lg border border-gray-200 dark:border-gray-700 p-8">
        <div id="bar-chart"></div>
      </div>

      <!-- Data for d3 (hidden, available for JavaScript) -->
      <script type="application/json" id="tech-data">
        {JSON.stringify(techCounts)}
      </script>
    </section>
  </div>

  <!-- D3.js Library -->
  <script src="https://d3js.org/d3.v7.min.js"></script>

  <!-- D3 Bar Chart Script -->
  <script>
    // Parse tech data from JSON
    const techData = JSON.parse(document.getElementById('tech-data').textContent);

    // Chart dimensions and configuration
    const margin = { top: 20, right: 60, bottom: 40, left: 150 };
    const width = Math.min(800, window.innerWidth - 100) - margin.left - margin.right;
    const height = techData.length * 35;

    // Detect dark mode
    const isDarkMode = document.documentElement.classList.contains('dark');

    // Color scheme
    const barColor = '#2563eb'; // blue-600
    const barHoverColor = '#1d4ed8'; // blue-700
    const textColor = isDarkMode ? '#e5e7eb' : '#374151'; // gray-200 : gray-700
    const labelColor = isDarkMode ? '#9ca3af' : '#6b7280'; // gray-400 : gray-500

    // Create SVG
    const svg = d3.select('#bar-chart')
      .append('svg')
      .attr('width', width + margin.left + margin.right)
      .attr('height', height + margin.top + margin.bottom)
      .append('g')
      .attr('transform', `translate(${margin.left},${margin.top})`);

    // Create scales
    const x = d3.scaleLinear()
      .domain([0, d3.max(techData, d => d.count)])
      .range([0, width]);

    const y = d3.scaleBand()
      .domain(techData.map(d => d.name))
      .range([0, height])
      .padding(0.2);

    // Add bars
    svg.selectAll('.bar')
      .data(techData)
      .enter()
      .append('rect')
      .attr('class', 'bar')
      .attr('x', 0)
      .attr('y', d => y(d.name))
      .attr('width', d => x(d.count))
      .attr('height', y.bandwidth())
      .attr('fill', barColor)
      .attr('rx', 4)
      .on('mouseover', function() {
        d3.select(this).attr('fill', barHoverColor);
      })
      .on('mouseout', function() {
        d3.select(this).attr('fill', barColor);
      });

    // Add labels (technology names)
    svg.selectAll('.label')
      .data(techData)
      .enter()
      .append('text')
      .attr('class', 'label')
      .attr('x', -10)
      .attr('y', d => y(d.name) + y.bandwidth() / 2)
      .attr('dy', '0.35em')
      .attr('text-anchor', 'end')
      .attr('fill', textColor)
      .attr('font-size', '14px')
      .attr('font-weight', '500')
      .text(d => d.name);

    // Add count labels (on the bars)
    svg.selectAll('.count')
      .data(techData)
      .enter()
      .append('text')
      .attr('class', 'count')
      .attr('x', d => x(d.count) + 10)
      .attr('y', d => y(d.name) + y.bandwidth() / 2)
      .attr('dy', '0.35em')
      .attr('fill', labelColor)
      .attr('font-size', '13px')
      .attr('font-weight', '600')
      .text(d => `${d.count} project${d.count > 1 ? 's' : ''}`);

    // Add x-axis
    svg.append('g')
      .attr('transform', `translate(0,${height})`)
      .call(d3.axisBottom(x).ticks(Math.min(6, d3.max(techData, d => d.count))))
      .attr('color', labelColor)
      .selectAll('text')
      .attr('fill', labelColor);

    // Style axis
    svg.selectAll('.domain, .tick line')
      .attr('stroke', isDarkMode ? '#4b5563' : '#d1d5db');
  </script>
</MainLayout>
