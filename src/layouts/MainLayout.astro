---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Jason Paladini',
  description = 'Jason Paladini - Principal Data Engineer'
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/jp_black.png" />
    <link rel="canonical" href={`https://jpaladini.com${Astro.url.pathname}`} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Jason Paladini",
      "jobTitle": "Principal Data Engineer",
      "url": "https://jpaladini.com",
      "sameAs": [
        "https://github.com/jpaladini",
        "https://linkedin.com/in/jason-paladini"
      ]
    })} />
  </head>

  <body class="bg-white dark:bg-slate-900 text-gray-900 dark:text-gray-100 min-h-screen">
    <!-- Top navigation bar -->
    <nav class="w-full py-3 border-b border-gray-100 dark:border-gray-800">
      <div class="max-w-4xl mx-auto px-6 flex items-center justify-between">
        <!-- Logo with proper tap target -->
        <a href="/" class="inline-flex items-center justify-center min-h-[44px] min-w-[44px] dark:hidden">
          <img
            src="/jp_black.webp"
            alt="JP Home"
            class="h-9 w-auto border-0 outline-none"
          />
        </a>
        <a href="/" class="inline-flex items-center justify-center min-h-[44px] min-w-[44px] hidden dark:inline-flex">
          <img
            src="/jp_white.webp"
            alt="JP Home"
            class="h-9 w-auto border-0 outline-none"
          />
        </a>

        <!-- Navigation Links with proper tap targets -->
        <div class="flex items-center gap-2">
          <a
            href="/projects"
            class="inline-flex items-center justify-center min-h-[44px] px-4 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          >
            Projects
          </a>
        </div>
      </div>
    </nav>

    <!-- Main content slot -->
    <main>
      <slot />
    </main>

    <!-- Dark mode detection -->
    <script>
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </body>
</html>
